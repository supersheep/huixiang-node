doctype html
html
  block variables
  head
    meta(charset="UTF-8")
    title=title
    link(rel="stylesheet",href="/css/base.css")
    if name
      link(rel="stylesheet",href="/css/#{name}.css")
    link(rel="shortcut icon",href="/favicon.ico")
    meta(name="apple-itunes-app",content="app-id=669860898")
    script.
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
      ga('create', 'UA-40645385-1', 'huixiang.im');
      ga('send', 'pageview');
    meta(name="viewport",content="initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0")
    script(src="/neurons/neuron.js")
    script(src="/neurons/config.js")
    script.
      neuron.config({
          path: "/neurons"
      });
  body
    #hd
      .tt
        a(href='/')
          span.quote 「
          | #{config.sitename}
          span.quote 」
      .account
        if user
          img.avatar(src='#{user.avatar}')
        else
          img.avatar(src='/img/default-avatar.png')
        ul.menu(style='display:none')
          if user
            li.menu-item
              a#write-note(href='/new') 记一句
            li.menu-item
              a#write-note(href='/people/#{user.id}') 我的茴香
            li.menu-item
              a(href='/tools') 工具盒
            li.menu-item
              a(href='/logout') 退出
          else
            li.menu-item
              a.login_douban(href='#')
                img(src='http://img3.douban.com/pics/douban-icons/favicon_24x24.png', title='豆瓣登录')
            li.menu-item
              a.login_weibo(href='#')
                img(src='http://www.sinaimg.cn/blog/developer/wiki/LOGO_24x24.png', title='微博登录')
    #bd
      block content
    #ft
        span#creator 大芋制造
        a#tools(href="/tools") 小工具
        a#about(href="/about") 关于
        a(href="/app") 移动应用
        if ENV=="DEV"
          a(href="javascript:;") DEV
    script.
      facade({
          entry:"huixiang/entries/header.js"
      });

    if name
      script.
        facade({
            entry:"huixiang/entries/#{name}.js"
        });